@model WijayanthaHardware.Models.PaintViewModel
@{
    ViewBag.Title = "Paints";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@section style{
    @Styles.Render("~/paint-css")
}
<div class="powertools">
    <div class="container">
        <h1 class="big-heading">Paints</h1>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="select-bar">
                    @Html.LabelFor(x => x.PaintCategoryId)
                    @Html.DropDownListFor(x => x.PaintCategoryId, Model.PaintCatergoryList, "Select Paint Category", new { @class = "wide" })

                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="select-bar">
                    @Html.LabelFor(x => x.PaintSubCategoryId)
                    @Html.DropDownListFor(x => x.PaintSubCategoryId, Model.PaintSubategoryList, "Select Paint", new { @class = "wide" })

                </div>
            </div>
        </div>
    </div>
</div>
@section script
{
    @Scripts.Render("~/paint-js")
}
