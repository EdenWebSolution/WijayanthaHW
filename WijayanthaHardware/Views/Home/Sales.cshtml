
@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@section style{
    @Styles.Render("~/sales-css")
}
<div class="sales">
    <div class="container">
        <h2 class="big-heading">sales</h2>
        <div class="sales-point">
            <form action="/" method="post">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <h2 class="small-heading pull-left">paint</h2>
                        <button id="newpaintsale" class="same-btn pull-right">Add more</button>
                    </div>
                </div>
                <div class="paintsales common-padding">
                    <div class="row">
                        <div class="piant-details">
                            <div class="col-xs-6 col-sm-6 col-md-3">
                                <label class="small-heading">Paint category</label>
                                <select class="wide">
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-3">
                                <label class="small-heading">Paint</label>
                                <select class="wide">
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-2">
                                <label class="small-heading">color</label>
                                <input class="color-type" type="text" name="name" value="" placeholder="Color" />
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-2">
                                <label class="small-heading">Volume</label>
                                <select class="wide">
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-2">
                                <label class="small-heading">Quantity</label>
                                <input type="text" name="name" value="" placeholder="Quantity" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <h2 class="small-heading pull-left">power tools</h2>
                        <button id="newpowersale" class="same-btn pull-right">Add more</button>
                    </div>
                </div>
                <div class="power-sales common-padding">
                    <div class="row">
                        <div class="tools-details">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <label class="small-heading">Tool Category</label>
                                <select class="wide">
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <label class="small-heading">Tool</label>
                                <select class="wide">
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                    <option value="value">text</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="othersales common-padding">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <h2 class="small-heading">other sales</h2>
                            <input type="number" name="name" value="" placeholder="Enter sales amount for other items" />
                        </div>
                    </div>
                </div>
                <button type="submit" class="same-btn pull-right">submit</button>
            </form>
        </div>
        <div class="sales-total">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <table>
                        <tr>
                            <td>Paint sales</td>
                            <td>10000LKR</td>
                        </tr>
                        <tr>
                            <td>Power tools sales</td>
                            <td>15000LKR</td>
                        </tr>
                        <tr>
                            <td>Other sales</td>
                            <td>12000LKR</td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 right-item">
                    <div class="total">37000LKR</div>
                    <div class="total-text">Total</div>
                </div>
            </div>
        </div>
    </div>
</div>
@section script
{
    @Scripts.Render("~/sales-js")
}
