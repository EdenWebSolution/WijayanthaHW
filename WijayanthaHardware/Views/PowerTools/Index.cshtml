@model WijayanthaHardware.Models.PowerToolsViewModel
@{
    ViewBag.Title = "Power Tools";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="powertools">
    <div class="container">
        <h1 class="big-heading">power tools</h1>
        <section class="main clearfix">
            <div class="fleft" id="first">
                <label>Select category</label>
                @Html.DropDownListFor(x => x.PowerToolId, Model.PowerToolSelectList, new { @class = "cd-select", @id = "cd-dropdown" })
            </div>
            <div class="fleft" id="second">
                <label>Select subcategory</label>
                @Html.DropDownListFor(x => x.PowerToolSubCategoryId, Model.PowerToolSubSelectList, "", new { @class = "cd-select", @id = "cd" })
            </div>
        </section>
    </div>
</div>

<script src="~/Scripts/PowerTools.js"></script>